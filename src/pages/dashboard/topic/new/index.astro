---
import CreateTopicForm from "@/components/Dashboard/Topic/DashboardCreateTopicForm"
import DashboardLayout from "@/layouts/DashboardLayout.astro"

const user = Astro.locals.user

if (!user?.role?.includes("admin" || "author")) {
  return Astro.redirect("/")
}
---

<DashboardLayout
  locale="id"
  seo={{
    title: "Create Topic",
    description: "Create Topic",
    canonical: `${import.meta.env.PUBLIC_SITE_URL}/dashboard/article/new`,
    openGraph: {
      basic: {
        title: `Create Topic | `,
        url: `${import.meta.env.PUBLIC_SITE_URL}/dashboard/article/new`,
        type: "website",
        image: "",
      },
      optional: {
        description: "Create Topic",
        locale: "ID",
      },
    },
  }}
>
  <div class="mx-4 flex w-full flex-col">
    <div class="mb-[100px] mt-4 flex items-end justify-end">
      <div class="flex-1 space-y-4">
        <CreateTopicForm client:load />
      </div>
    </div>
  </div></DashboardLayout
>
